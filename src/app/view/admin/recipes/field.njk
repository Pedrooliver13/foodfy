<div class="item">
  <div>Imagem da receita</div>
  <div class="photos-upload">
  
    <input id="photos-input" type="file" name="photos" multiple="multiple" accept="image/*" onchange="PhotosUpload.handleFileInput(event)">
    
  </div>
  <div class="photos-upload__preview">

    <div class="photo-add">
      <i class="material-icons" style="color:#777;">add</i>
    </div>
    
  </div>

  <input type="hidden" name="removed_files">
</div>
{# /item #}

<div class="item">
  <div>Título da Receita</div>
  <div><input type="text" name="title" value="{{ recipe.title }}"></div>
</div>
<div class="item">
  <div>Chef</div>
  <div>
    <select name="chefs">
      {% for chef in chefs %}
        <option value="{{ chef.id }}" {% if chef.id == recipe.chef_id %} select="select" {% endif %}>
          {{ chef.name }}
        </option>
      {% endfor %}
    </select>
  </div>
</div>
<div class="item" id="ingredients">
  <div>Ingredientes</div>
  <div class="ingredient">
    <input type="text" name="ingredients[]" value="{{ recipe.ingredients }}"/>
  </div>
</div>
<button type="button" class="add-ingredient">Adicionar novo Ingredientes</button>
<div class="item" id="preparation">
  <div>Modo de preparo</div>
  <div class="preparation">
    <input type="text" name="preparation[]" value="{{ recipe.preparation }}"/>
  </div>
</div>
<button type="button" class="add-preparation">Adicionar novo Ingredientes</button>

<div class="item">
  <div>Informações Adicionais
    <span>*opcional</span>
  </div>
  <div>
    <textarea type="text" name="information" value="{{ recipe.additionalInfos }}"></textarea>

  </div>