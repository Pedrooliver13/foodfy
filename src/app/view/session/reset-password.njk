{% extends "index.njk" %}

{%block header%}
  <header class="header_login container">
    <div class="logo">
      <a href="/">
        <img src="/../assets/logo.png" alt="">
      </a>
    </div>
  </header>
  {%endblock%}

  {% block content %}

    <section class="session_forms">

      <h2>Iniciar Sessão</h2>

      <form method="POST" action="/users">

        <div class="item">
          <div>Email</div>

          <div>
            <input type="email" name="email" placeholder="Dígite seu email" onblur="validate.apply(this, 'isEmail')">
          </div>
        </div>

        <div class="item">
          <div>Nova senha</div>

          <div>
            <input type="password" name="password" placeholder="Dígite sua nova senha"/>
          </div>

        </div>

        <div class="item">
          <div>
            Repetir senha
          </div>

          <div>
            <input type="password" name="RepeatPassword" placeholder="Repita sua senha">
          </div>

        </div>

        <div class="session_buttons">

          <button class="item_button">Acessar</button>
        </div>
      </form>
    </section>
  {% endblock content %}