{% extends "index.njk" %}

{%block header%}
  <header class="header_login container">
    <div class="logo">
      <a href="/">
        <img src="/../assets/logo.png" alt="Logo Foodfy">
      </a>
    </div>
  </header>
{%endblock header%}

{% block content %}

  <section class="session_forms">

    <h2>Iniciar Sessão</h2>

    <form method="POST" action="/forgot-password">
      <div class="item">
        <div>Email</div>

        <div>
          <input 
            type="email" 
            name="email" 
            placeholder="Dígite seu email para recuperar sua senha"
            onblur="validate.apply(this, 'isEmail')"
          >
        </div>
      </div>

      <div class="session_buttons">
        <button type="submit" class="button">Recuperar</button>
      </div>
    </form>
  </section>
{% endblock content %}