{% extends 'index.njk' %}
{% import "../../part/cardRecipes.njk" as cards %}

{% block content %}
  <section class="recipes container">
    <div class="recipe_sub-title">
      <p>
        <strong>Chef: {{ chef.name }}</strong>
      </p>

      <a class="item_button" href="/admin/chefs/{{ chef.id }}/edit">Editar Chef</a>
    </div>

    <div class="highlight_chef">
      {% if files %}
        <img src="{{ chef.img }}" alt="{{ files[0].name }}">
      {% endif %}

    </div>

    <div>
      <div class="title_show">
        <p>{{ chef.name }}</p>
      </div>
      <div class="recipe_info">
        <p>{{ chef.total_recipes }}
          Receitas</p>
      </div>
    </div>
  </section>
  
  <section class="container">
    <h3 class="recipe_sub-title">Receitas</h3>
    
    {{ cards.recipes(chef.name, "", recipes) }}
      
  </section>

{% endblock %}