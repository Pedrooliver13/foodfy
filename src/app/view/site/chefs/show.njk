{% extends 'index.njk' %}

{% block css %}
  <link rel="stylesheet" href="/stylesheet/show.css">
{% endblock css %}

{% block head %}
  <title>{{ chef.name }}
    - Foodfy</title>
{% endblock %}

{% block inputSeach %}
  {% include "../../admin/chefs/input-chefs.njk" %}
{% endblock inputSeach %}

{% block content %}
  <section class="recipes container">
    <div class="recipe_sub-title">
      <p>
        <strong>Chef: {{ chef.name }}</strong>
      </p>

      <a class="item_button" href="/admin/chefs/{{ chef.id }}/edit">Editar Chef</a>
    </div>

    <div class="highlight_chef">
      {% if files %}
        <img src="{{ files[0].src }}" alt="{{ files[0].name }}">
      {% endif %}

    </div>

    <div>
      <div class="title_show">
        <p>{{ chef.name }}</p>
      </div>
      <div class="recipe_info">
        <p>{{ chef.total_recipes }}
          Receitas</p>
      </div>
    </div>
  </section>
  
  <section class="container">
    <h3>Receitas</h3>
    
    <div class="main_cards">
    
      {% for recipe in recipes %}
        <div class="card" id="{{ recipe.title }}">

          <div class="img_card">
            <a href="/recipes/{{ recipe.recipe_id }}">
              <img src="{{ files[0].src }}" alt="">
            </a>
          </div>

          <div class="card_content">
            <p>{{ recipe.title }}</p>
          </div>
          <div class="card_info">
            <p>{{ chef.name }}</p>
          </div>

        </div>
      {% endfor %}

    </div>
    <!-- CARDS(DAD) -->
  </section>

{% endblock %}