{% extends 'index.njk' %}

{% block head %}
    <title>{{ chef.name }}
        - Foodfy</title>
{% endblock %}

{% block inputSeach %}
    {% include "../../admin/chefs/input-chefs.njk" %}
{% endblock inputSeach %}

{% block content %}
    <section class="recipes container">
        <div class="container" style="display:flex; align-items:center; justify-content:space-between; margin-top:10px">
            <p><strong>Chef: {{ chef.name }}</strong></p>
            
            <a class="item_button" href="/admin/chefs/{{ chef.id }}/edit">Editar Chef</a>
        </div>
        <div class="wrapper_chef">
            <img src="{{ chef.avatar_url }}" alt="{{ chef.title }}">
        </div>
        <div class="recipe_title">
            <p>{{ chef.name }}</p>
        </div>
        <div class="recipe_info">
            <p>{{ chef.total_recipes }} receitas</p>
        </div>
    </section>
    <section class="container">
        <h3>Receitas</h3>
         <div class="main_cards">
                {% for recipe in recipes %}
                    <div class="card" id="{{ recipe.title }}">
                        <div class="img_card">
                            <a href="/recipes/{{ recipe.recipe_id }}">
                                <img src="{{ recipe.image }}" alt="">
                            </a>
                        </div>
                        <div class="card_content">
                            <p>{{ recipe.title }}</p>
                        </div>
                        <div class="card_info">
                            <p>{{ chef.name }}</p>
                        </div>
                       
                    </div>
                {% endfor %}
                
        </div><!-- CARDS(DAD) -->
    </section>
    

{% endblock %}